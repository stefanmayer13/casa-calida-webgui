{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmascript": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "browser": true
  },
  "plugins": [
    "react"
  ],
  "globals": {
    "process": true,
    "require": true
  },
  "rules": {
    "comma-dangle": [1, "always-multiline"],
    "strict": [2, "never"], // babel adds this automatically
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error"
  }
}